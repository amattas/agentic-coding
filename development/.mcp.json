{
  "mcpServers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer YOUR_GITHUB_PAT"
      }
    },
    "gpt-review": {
      "type": "stdio",
      "command": "codex",
      "args": [
        "-m",
        "gpt-5.2-codex",
        "-c",
        "model_reasoning_effort=medium",
        "mcp"
      ],
      "env": {}
    },
    "gpt-debug": {
      "type": "stdio",
      "command": "codex",
      "args": [
        "-m",
        "gpt-5.2-codex-max",
        "-c",
        "model_reasoning_effort=xhigh",
        "mcp"
      ],
      "env": {}
    }
  }
}

